<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.eason.dao.DoctorTopicMapper">
    <resultMap id="doctorTopicMap" type="com.qf.eason.pojo.DoctorTopic">
        <id property="id" column="tb_doctortopic_id"/>
        <result property="name" column="tb_doctortopic_name"/>
        <result property="text" column="tb_doctortopic_text"/>
        <result property="img" column="tb_doctortopic_img"/>
        <result property="date" column="tb_doctortopic_date"/>
        <result property="reading" column="tb_doctortopic_num"/>
        <result property="star" column="tb_doctortopic_thumbup"/>
        <association property="doctorinfor" column="tb_doctortopic_dip" javaType="com.qf.eason.pojo.Doctorinfor">
            <id property="id" column="tb_doctorinfor_id"/>
            <result property="realaName" column="tb_doctorinfor_realname"/>
            <result property="phone" column="tb_doctorinfor_phone"/>
            <result property="email" column="tb_doctorinfor_email"/> <!--//邮箱-->
            <result property="hospital" column="tb_doctorinfor_hospital"/> <!--;//医院名称-->
            <result property="office" column="tb_doctorinfor_office"/><!--;//科室-->
            <result property="title" column="tb_doctorinfor_title"/> <!--;//职称-->
            <result property="officePhone" column="tb_doctorinfor_officephone"/> <!--;//科室电话-->
            <result property="adept" column="tb_doctorinfor_adept"/> <!--;//擅长及诊所介绍-->
            <result property="impSrc" column="tb_doctorinfor_img"/> <!--;//图片地址-->
            <result property="sendWord" column="tb_doctorinfor_sendword"/> <!--;//医生寄语-->
            <result property="hospiTaltype" column="tb_doctorinfor_hospitaltype"/><!--;//医院类型-->
            <result property="workTime" column="tb_doctorinfor_worktime"/><!-- ;//从业时间-->
            <result property="city" column="tb_doctorinfor_city"/><!--;//所在省份-->
            <result property="peopleNumint" column="tb_doctorinfor_peoplenum"/><!--//咨询人数-->
            <result property="goodRateint" column="tb_doctorinfor_goodrate"/> <!--;//好评数-->
            <result property="degreeint" column="tb_doctorinfor_degree"/><!--;//同行认可-->
            <result property="printreferint" column="tb_doctorinfor_printrefer"/><!-- ;//图片咨询人数-->
            <result property="phonereferint" column="tb_doctorinfor_phonerefer"/><!-- ;//电话咨询人数-->
            <result property="privatereferint" column="tb_doctorinfor_privaterefer"/><!-- ;//私人医生价格-->
            <result property="backyardint" column="tb_doctorinfor_backyard"/> <!--院后指导价-->
            <result property="honor" column="tb_doctorinfor_honor"/> <!--;//学术荣誉-->
        </association>
    </resultMap>

    <resultMap id="doctorinforMap" type="com.qf.eason.pojo.Doctorinfor">
        <id property="id" column="tb_doctorinfor_id"/>
        <result property="realaName" column="tb_doctorinfor_realname"/>
        <result property="phone" column="tb_doctorinfor_phone"/>
        <result property="email" column="tb_doctorinfor_email"/> <!--//邮箱-->
        <result property="hospital" column="tb_doctorinfor_hospital"/> <!--;//医院名称-->
        <result property="office" column="tb_doctorinfor_office"/><!--;//科室-->
        <result property="title" column="tb_doctorinfor_title"/> <!--;//职称-->
        <result property="officePhone" column="tb_doctorinfor_officephone"/> <!--;//科室电话-->
        <result property="adept" column="tb_doctorinfor_adept"/> <!--;//擅长及诊所介绍-->
        <result property="impSrc" column="tb_doctorinfor_img"/> <!--;//图片地址-->
        <result property="sendWord" column="tb_doctorinfor_sendword"/> <!--;//医生寄语-->
        <result property="hospiTaltype" column="tb_doctorinfor_hospitaltype"/><!--;//医院类型-->
        <result property="workTime" column="tb_doctorinfor_worktime"/><!-- ;//从业时间-->
        <result property="city" column="tb_doctorinfor_city"/><!--;//所在省份-->
        <result property="peopleNumint" column="tb_doctorinfor_peoplenum"/><!--//咨询人数-->
        <result property="goodRateint" column="tb_doctorinfor_goodrate"/> <!--;//好评数-->
        <result property="degreeint" column="tb_doctorinfor_degree"/><!--;//同行认可-->
        <result property="printreferint" column="tb_doctorinfor_printrefer"/><!-- ;//图片咨询人数-->
        <result property="phonereferint" column="tb_doctorinfor_phonerefer"/><!-- ;//电话咨询人数-->
        <result property="privatereferint" column="tb_doctorinfor_privaterefer"/><!-- ;//私人医生价格-->
        <result property="backyardint" column="tb_doctorinfor_backyard"/> <!--院后指导价-->
        <result property="honor" column="tb_doctorinfor_honor"/> <!--;//学术荣誉-->
    </resultMap>
    <select id="findAllTopic" resultMap="doctorTopicMap">
    select i.*,t.* from tb_doctorinfor i,tb_doctortopic t where i.tb_doctorinfor_id = t.tb_doctortopic_dip ORDER BY t.tb_doctortopic_date DESC
    </select>
    <select id="findTopicBydoctorId" resultMap="doctorTopicMap">
    select i.*,t.* from tb_doctorinfor i,tb_doctortopic t where i.tb_doctorinfor_id = t.tb_doctortopic_dip and t.tb_doctortopic_dip=#{doctorId}
    ORDER BY t.tb_doctortopic_date DESC
    </select>
    <update id="addReading">
    update tb_doctortopic set tb_doctortopic_num=tb_doctortopic_num+1 where tb_doctortopic_id=#{topicId}
    </update>
    <select id="isGiveStar" resultType="int">
        select count(tb_user_id) from tb_user_doctortopic where
        <if test="userId!=0 and topicId!=0" >
            tb_user_id=#{userId} and tb_doctortopic_id=#{topicId}
        </if>
    </select>
    <update id="addStar">
    update tb_doctortopic set tb_doctortopic_thumbup=tb_doctortopic_thumbup+1 where tb_doctortopic_id=#{topicId}
    </update>
    <insert id="recordAddStar">
    insert into tb_user_doctortopic(tb_user_id,tb_doctortopic_id) values(#{userId},#{topicId})
    </insert>

    <select id="isFollowDoctor" resultType="int">
        select count(tb_user_id) from tb_user_and_doctor where
        <if test="userId!=0 and doctorId!=0" >
            tb_user_id=#{userId} and tb_doctor_id=#{doctorId}
        </if>
    </select>
    <insert id="followDoctor">
        insert into tb_user_and_doctor(tb_user_id,tb_doctor_id) values
        <if test="userId!=0 and doctorId!=0" >
            (#{userId},#{doctorId})
        </if>
    </insert>
    <update id="reverseFollowDoctor" >
        delete from tb_user_and_doctor
        <if test="userId!=0 and doctorId!=0" >
            where tb_doctor_id=#{doctorId} and tb_user_id=#{userId}
        </if>
    </update>
    <select id="myDoctor" resultMap="doctorinforMap">
        select  d.* from tb_user u,tb_user_and_doctor ud,tb_doctorinfor d where u.tb_user_id= ud.tb_user_id
        and ud.tb_doctor_id= d.tb_doctorinfor_id and u.tb_user_id=#{userId}
    </select>
    <select id="myDoctorTopic" resultMap="doctorTopicMap">
        select d.*,t.* from tb_user u,tb_user_and_doctor ud,tb_doctorinfor d,tb_doctortopic t where
        u.tb_user_id=ud.tb_user_id and ud.tb_doctor_id=d.tb_doctorinfor_id and d.tb_doctorinfor_id=t.tb_doctortopic_dip and
        u.tb_user_id=#{userId} order by t.tb_doctortopic_date desc
    </select>


    <select id="aboutFindByName" resultMap="doctorTopicMap">
        select i.*,t.* from tb_doctorinfor i,tb_doctortopic t where i.tb_doctorinfor_id = t.tb_doctortopic_dip
        <if test="tiaoJian!=null">
            and t.tb_doctortopic_name LIKE CONCAT(CONCAT ('%',#{tiaoJian}),'%')
        </if>
        ORDER BY t.tb_doctortopic_date DESC
    </select>

    <select id="findallbyname" parameterType="String" resultMap="doctorTopicMap">
        <if test="drugname!=null">
            <bind name="name" value="'%'+drugname+'%'"/>
        </if>
        <if test="drugname!=null">
            <bind name="text" value="'%'+drugname+'%'"/>
        </if>
        select * from tb_doctortopic
        <where>
            <trim suffixOverrides="or">
                <if test="name!=null">
                    tb_doctortopic_name like #{name} or
                </if>
                <if test="text!=null">
                    tb_doctortopic_text like #{text}
                </if>
            </trim>
        </where>
    </select>

</mapper>